<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    tools:context="com.cmu.jaylerr.dolaecareme.descendant.descendantview.CameraActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <FrameLayout
            android:id="@+id/frame_activity_camera_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <Button
            android:id="@+id/btn_activity_camera_control"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/btn_activity_camera_full"
            android:background="@color/white_light_overlay"
            android:text="@string/message_play"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:textColor="@color/black_overlay" />

        <Button
            android:id="@+id/btn_activity_camera_full"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white_light_overlay"
            android:text="@string/message_close"
            android:layout_margin="1dp"
            android:textAllCaps="false"
            android:padding="2dp"
            android:textColor="@color/black_overlay" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
