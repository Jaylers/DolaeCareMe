<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmu.jaylerr.dolaecareme.center.views.togetherview.DoctorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_doctor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_doctor"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_doctor_title"
            android:layout_toEndOf="@+id/img_doctor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Chiang Mai Hospital"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/txt_doctor_time"
            android:layout_toEndOf="@+id/img_doctor"
            android:layout_below="@+id/txt_doctor_title"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="8:00"
            android:layout_height="30dp" />

        <TextView
        android:id="@+id/txt_doctor_date"
        android:layout_toEndOf="@+id/txt_doctor_time"
        android:layout_below="@+id/txt_doctor_title"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:text="20-Jun-2017"
        android:layout_height="30dp" />

        <TextView
            android:id="@+id/txt_doctor_remake"
            android:layout_toEndOf="@+id/img_doctor"
            android:layout_below="@+id/txt_doctor_date"
            android:layout_width="wrap_content"
            android:gravity="top"
            android:text="talk a current pills and give to the doctor"
            android:layout_height="40dp" />
    </RelativeLayout>

</FrameLayout>
